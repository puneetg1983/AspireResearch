@page "/ai-jokes"
@using AppServiceDiagnostics.Web
@inject BackendClient BackendClient
@inject ILogger<AIJokes> Logger
@rendermode InteractiveServer

<PageTitle>AI Jokes</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">ðŸ¤– AI Joke Generator</h1>
            <p class="lead">Get a fresh joke from our AI-powered comedian agent!</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-robot"></i> AI Joke Service
                    </h5>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Generating joke...</span>
                            </div>
                            <span class="ms-3">Our AI comedian is thinking of a good one...</span>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(currentJoke))
                    {
                        <div class="alert alert-light border" role="alert">
                            <h6 class="alert-heading">
                                <i class="bi bi-emoji-laughing"></i> Fresh from the AI:
                            </h6>
                            <hr>
                            <p class="mb-0 fs-5">@currentJoke</p>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted" style="min-height: 200px; display: flex; align-items: center; justify-content: center;">
                            <div>
                                <i class="bi bi-robot display-1 opacity-25"></i>
                                <p class="mt-3">Click the button below to get your first AI-generated joke!</p>
                            </div>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @errorMessage
                        </div>
                    }

                    <div class="d-grid gap-2 mt-3">
                        <button class="btn btn-primary btn-lg" @onclick="GenerateJoke" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Generating...</span>
                            }
                            else
                            {
                                <i class="bi bi-lightning-fill me-2"></i>
                                <span>@(string.IsNullOrEmpty(currentJoke) ? "Get Your First Joke!" : "Get New Joke!")</span>
                            }
                        </button></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle"></i> About AI Jokes
                    </h6>
                </div>
                <div class="card-body">
                    <p class="card-text small">
                        This feature demonstrates Azure AI Foundry integration with Microsoft Agent Framework. 
                        Our joke agent is powered by AI and generates clean, family-friendly humor on demand.
                    </p>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <small class="text-muted">Service Status:</small>
                        <span class="badge bg-success">Active</span>
                    </div>
                </div>
            </div>

            @if (jokeHistory.Any())
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="bi bi-clock-history"></i> Recent Jokes
                        </h6>
                    </div>
                    <div class="card-body">
                        @foreach (var joke in jokeHistory.Take(3))
                        {
                            <div class="border-start border-primary ps-3 mb-2">
                                <p class="mb-1 small">@joke</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string? currentJoke;
    private string? errorMessage;
    private bool isLoading = false;
    private List<string> jokeHistory = new();

    protected override async Task OnInitializedAsync()
    {
        // Let the page render first, then optionally auto-load first joke
        _ = InvokeAsync(async () =>
        {
            await Task.Delay(100); // Small delay to ensure page has rendered
            // Don't auto-load joke on page load - let user click the button
            StateHasChanged(); // Force UI update after initialization
        });
    }

    private async Task GenerateJoke()
    {
        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            var joke = await BackendClient.GetAIJokeAsync();
            
            if (!string.IsNullOrEmpty(joke))
            {
                // Add current joke to history before replacing it
                if (!string.IsNullOrEmpty(currentJoke))
                {
                    jokeHistory.Insert(0, currentJoke);
                    // Keep only the last 10 jokes in history
                    if (jokeHistory.Count > 10)
                    {
                        jokeHistory = jokeHistory.Take(10).ToList();
                    }
                }
                currentJoke = joke;
            }
            else
            {
                errorMessage = "No joke received from the AI service. Please try again.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error getting AI joke");
            errorMessage = $"Error getting joke: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}